<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="instructionsViewModel"
            type="com.example.myapplicationfinal.InstructionsFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InstructionsFragment">
        <TextView
            android:id="@+id/inst1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:text="Instructions"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inst2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="150dp"
            android:text="show that this is a instructions screen "
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="@font/alfa_slab_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Button
            android:id="@+id/inst3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:text="next"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="30dp"
            android:drawable="@drawable/shape_button01"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inst2">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>